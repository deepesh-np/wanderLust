<!-- @format -->

<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><b> <%= listing.title %> </b></h3>
  </div>

  <div class="card col-6 offset-3 show-card listing-card">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="listing_img" />
    <div class="card-body">
      <i><p class="card-text">Owned by <%= listing.owner.username %></p></i>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">
        &#8377; <%=listing.price.toLocaleString("en-IN") %>
      </p>
      <p class="card-text"><%= listing.location %></p>
      <p><%= listing.country %></p>
    </div>
  </div>
  <br />
  <% if( currUser && currUser._id.equals(listing.owner._id)) { %>
  <div class="btns offset-3 mb-4">
    <!-- Edit button -->
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark col-1 offset-2 show-btn">
      Edit
    </a>

    <!-- Delete form -->
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-4">Delete</button>
    </form>
  </div>
  <% } %>
  <!-- review sction -->

  <div class="col-8 offset-3">
    <hr />
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing._id %>/reviews"
      method="post"
      novalidate
      class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          class="form-label"
          name="review[rating]" />
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          class="form-control"
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          required></textarea>
        <div class="invalid-feedback">Please add some comment to review</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>

    <hr />

    <p><b>All Reviews</b></p>
    <div class="row">
      <% for (const review of listing.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title">Jane etla</h5>
          <h6 class="card-subtitle"><%= review.comment %></h6>
          <p class="card-text"><%= review.rating %> stars</p>
        </div>
        <form
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          class="mb-3"
          method="POST">
          <button
            class="btn btn-sm bt-dark btn-outline-dark"
            style="background-color: rgb(24, 22, 22); color: whitesmoke">
            Delete
          </button>
        </form>
      </div>
      <% } %>
    </div>
  </div>
</div>
