<!-- @format -->

<%- layout("layouts/boilerplate") %>

<div class="row mt-3">
  <h1 class="col-6 offset-3">Login for Wanderlist</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" type="text" class="form-control" required />
        <!-- <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Not Valid Username</div> -->
      </div>
      <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input name="password" type="password" class="form-control" required />
          <!-- <div class="valid-feedback">Password looks good</div>
          <div class="invalid-feedback">Please enter another password!</div> -->
        </div>
        <button class="btn btn-success">Login</button>
    </form>
  </div>
</div>
